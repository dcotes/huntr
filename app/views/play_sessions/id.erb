  <body id="top">

      <!-- begin:content -->
    <div id="content">
      <div class="container">
        <div class="row">
          <!-- begin:article -->
          <div class="col-md-9 col-md-push-3">
            <div class="row">
              <div class="col-md-12 single-post">

                <div id="myTabContent" class="tab-content">
                  <div class="tab-pane fade in active" id="detail">
                    <div class="row">
                       <h5 class="text-center"><%= @play_session.location.clue %></h5>
                    </div>
                    <div class="row">
                      <div class="col-md-12">

                        <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script><div style="overflow:hidden;min-height:500px;width:100%;height:100%;"><div id="gmap_canvas" style="height:500px;"></div><style>#gmap_canvas img{max-width:none!important;background:none!important}</style></div><script type="text/javascript"> function init_map(){var myOptions = {zoom:13,center:new google.maps.LatLng(49.2909036,-123.145783),mapTypeId: google.maps.MapTypeId.ROADMAP};map = new google.maps.Map(document.getElementById("gmap_canvas"), myOptions);marker = new google.maps.Marker({map: map,position: new google.maps.LatLng(49.2909036, -123.145783)});infowindow = new google.maps.InfoWindow({content:"<b>Stanley Park</b><br/><br/>V6G 1Z4 vancouver" });google.maps.event.addListener(marker, "click", function(){infowindow.open(map,marker);});infowindow.open(map,marker);}google.maps.event.addDomListener(window, 'load', init_map);</script>

                      </div>
                    </div>

                    
                  </div>
                  <!-- break -->
                  <div class="row">
                    <div class="col-md-12">

                    <div class="col-md-12">
                    <ul>
                      <% if @hints %>
                        <% @hints.each do |hint| %>
                          <li><%= hint.body %></li>
                        <% end %>
                      <% end %>
                    </ul>
                    </div>

                    <form id='hint_request' method='post' action="/play_sessions/<%= @play_session.id %>">
                      <input form='hint_request' name="_method" type="hidden" value="put" />
                    </form>
                    <form id='guess_form' method='post' action="/play_sessions/<%= @play_session.id %>">
                    <input form='guess_form' name="_method" type="hidden" value="put" />
                      <!-- <input type="submit" class="btn btn-primary btn-block btn-lg start_button" value="Next Hint">  
                      <input type="submit" class="btn btn-primary btn-block btn-lg start_button hint" value="Make a Guess"> -->
                      <div class="btn-group btn-group-justified" role="group" aria-label="...">
                        <div class="btn-group" role="group">
                          <input form='hint_request' type="submit"  class="btn btn-default" value="Hint">
                          <input form='hint_request' name="hint_request" type="hidden" value="true" />
                        </div>
                        <div class="btn-group" role="group">
                          <input form='guess_form' type="submit" class="btn btn-default" value="Guess">
                        </div>
                        <div class="btn-group" role="group">
                          <input form='guess_form' type="submit" class="btn btn-default" value="Suspend">
                        </div>
                      </div>
                        <hr/>
                        <% if !@play_session.complete %>
                        <h3>Dev: Temporary Guess Box</h3>
                              
                              Latitude:<input form='guess_form' type="text" name="guess_lat">
                              Longitude:<input form='guess_form' type="text" name="guess_lon">
                              <br>
                              <p style="color:white; font-size:200%">lat:<span style="padding-left: 50px; padding-right:30px"><%= @play_session.location.lat %></span> 
                              lon: <span style="padding-left: 50px;"><%= @play_session.location.lon %></span></p>  
                        <% end %>
                        <% if @play_session.complete %>
                          <h1>Hunt COMPLETED!</h1>
                        <% end %>
                        <hr/>
                    </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- end:article -->

          <!-- begin:sidebar -->
          <div class="col-md-3 col-md-pull-9 sidebar">
            
            <!-- break -->
            <div class="widget widget-sidebar widget-white">
              <div class="widget-header">
                <h3><%= @play_session.hunt.name %><br>
                  <span class="hunt_location"><%= @play_session.hunt.city %></span><br>
                  <div class="hunt_stars logo_r">
                    <% @play_session.hunt.level.times do %> <i class="fa fa-star"></i> <% end %>
                  </div>
                </h3>
                
              </div>    
              <ul>
                <li><a><strong>Difficulty</strong>: <%= level_to_difficulty(@play_session.hunt.level) %></a></li>
                <li><a><strong>Locations</strong>: <%= @play_session.hunt.locations.count %></a></li>
                <li><a><strong>Au</strong>: 400</a></li>
                <li><a><strong>Distance</strong>: 1.5 KM</a></li>
                <li><a><strong>Time</strong>: <%= @play_session.hunt.target_time %> Hr</a></li>
              </ul>
            </div>
            <!-- break -->
            
           
          </div>
          <!-- end:sidebar -->
          
        </div>
      </div>
    </div>
    <!-- end:content -->


   


